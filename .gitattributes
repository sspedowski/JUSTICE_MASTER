# Text line endings
*.sh      text eol=lf
*.bash    text eol=lf
*.py      text eol=lf
*.md      text eol=lf
*.yml     text eol=lf
*.yaml    text eol=lf
*.json    text eol=lf
*.jsonc   text eol=lf

# Windows scripts
*.ps1     text eol=crlf
*.psm1    text eol=crlf
*.cmd     text eol=crlf
*.bat     text eol=crlf

# Binary files
*.zip     binary
*.pdf     binary
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
